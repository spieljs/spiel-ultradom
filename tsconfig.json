{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"module": "commonjs",
		"strict": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"noEmit": false,
		"experimentalDecorators": true,
		"declaration": true,
		"jsx": "react",
		"jsxFactory": "h",
		"outDir": "./lib",
		"rootDir": ".",
		"sourceMap": true
	},
	"include": [
		"./src",
		"./test"
	],
	"exclude": [
		"node_modules",
		"lib",
		"test"
	]
}
